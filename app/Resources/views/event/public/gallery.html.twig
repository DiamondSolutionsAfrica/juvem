{% extends 'base.html.twig' %}

{% block title %}Veranstaltung ({{ event.title }}){% endblock %}

{% block body %}
    <section>
        <article>
            {% embed 'common/header/base-page-header.html.twig' with {'title': event.title, 'subtitle': 'Bildergallerie'} %}
                {% block breadcrumb %}
                    <li><a href="{{ path('homepage') }}">Juvem</a></li>
                    <li><a href="{{ path('event_public_detail', {'eid': event.eid }) }}">{{ event.title }}</a>
                    <li class="active">Bildergallerie</li>
                {% endblock %}
            {% endembed %}
            <div class="container">
                <div class="row">
                    <div class="media-gallery">
                        <div class="row gallery" id="dropzone-gallery">
                            {% for image in images %}
                                <div class="image col-xs-6 col-sm-4 col-md-3 col-lg-2">
                                    <div class="gallery-image-wrap">
                                        <a href="{{ path('gallery_image_original', {'eid': event.eid, 'iid': image.iid}) }}">
                                            <img src="{{ path('gallery_image_thumbnail', {'eid': event.eid, 'iid': image.iid}) }}"
                                                 class="img-responsive">
                                            <span>{{ image.title }}</span>
                                        </a>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>

                </div>
            </div>
        </article>
    </section>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Anmeldung ({{ event.title }}){% endblock %}

{% block body %}
    {% embed 'common/header/base-page-header.html.twig' with {'title': 'Anmeldung', 'subtitle': 'Detailansicht'} %}
        {% block breadcrumb %}
            <li><a href="{{ path('event_list') }}">Veranstaltungen</a></li>
            <li><a href="{{ path('event', {'eid': event.eid }) }}">{{ event.title }}</a></li>
            <li><a href="{{ path('event_participants_list', {'eid': event.eid }) }}">Anmeldungen
                    Familie {{ participation.nameLast }}</a></li>
            <li class="active">Anmeldung</li>
        {% endblock %}
    {% endembed %}
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <div class="btn-toolbar" role="toolbar" aria-label="Anmeldungsdetails bearbeiten">
                    <div class="btn-group" role="group">
                        {% embed 'common/active-button.html.twig' with {'button': buttonConfirmation} %}
                            {% block success %}
                                if (response.value !== null) {
                                    $('.status-label-list .option-{{ constant('AppBundle\\BitMask\\ParticipantStatus::TYPE_STATUS_CONFIRMED') }}').each(function(i, el) {
                                        el = $(el);
                                        if (response.value) {
                                            el.text('bestätigt');
                                            el.addClass( 'label-primary' );
                                            el.removeClass( 'label-default' );
                                        } else {
                                            el.text('unbestätigt');
                                            el.addClass( 'label-default' );
                                            el.removeClass( 'label-primary' );
                                        }
                                    });
                                }
                            {% endblock %}
                        {% endembed %}
                        {% embed 'common/active-button.html.twig' with {'button': buttonPayment} %}
                            {% block success %}
                                if (response.value !== null) {
                                        if (response.value) {
                                            $('.status-label-list').append('<span class="label label-primary option-{{ constant('AppBundle\\BitMask\\ParticipantStatus::TYPE_STATUS_PAID') }}">{{ constant('AppBundle\\BitMask\\ParticipantStatus::LABEL_STATUS_PAID') }}</span>');
                                        } else {
                                            $('.status-label-list .option-{{ constant('AppBundle\\BitMask\\ParticipantStatus::TYPE_STATUS_PAID') }}').remove();
                                        }
                                }
                            {% endblock %}
                        {% endembed %}
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12 col-md-6">
                <h3 id="data-participation">Daten der Eltern</h3>

                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">{{ participation.nameLast }}, {{ participation.nameFirst }}</h3>
                    </div>
                    <div class="panel-body">
                        <dl class="dl-horizontal">
                            <dt>Anrede</dt>
                            <dd>{{ participation.salution }}</dd>
                            <dt>Vorname</dt>
                            <dd>{{ participation.nameFirst }}</dd>
                            <dt>Nachname</dt>
                            <dd>{{ participation.nameLast }}</dd>
                            <dt>Telefonnummern</dt>
                            <dd class="address-container">
                                {% for phoneNumber in participation.phoneNumbers %}
                                    <address>
                                        <strong>{{ phone_number_format(phoneNumber.number, 'INTERNATIONAL') }}</strong>
                                        {% if phoneNumber.description %}
                                            <br>{{ phoneNumber.description }}
                                        {% endif %}
                                    </address>
                                {% endfor %}
                            </dd>
                            <dt>Anschrift</dt>
                            <dd class="address-container">
                                <address>
                                    <strong>{{ participation.getName() }}</strong><br>
                                    {{ participation.addressStreet }}<br>
                                    {{ participation.addressZip }} {{ participation.addressCity }}
                                </address>
                            </dd>
                            <dt>E-Mail Adresse</dt>
                            <dd>
                                <address>
                                    {{ participation.email }}
                                </address>
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>
            {% for participant in participation.participants %}
                <div class="col-xs-12 col-md-6">
                    {% if loop.index0 == 0 %}
                        <h3 id="data-participants">Daten der Teilnehmer</h3>
                    {% endif %}
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h4 class="panel-title">{{ participant.nameLast }}, {{ participant.nameFirst }}</h4>
                        </div>
                        <div class="panel-body">
                            <div class="row" id="participant-{{ loop.index }}">
                                <div class="col-xs-12">
                                    <dl class="dl-horizontal">
                                        <dt>Vorname</dt>
                                        <dd>{{ participant.nameFirst }}</dd>
                                        <dt>Nachname</dt>
                                        <dd>{{ participant.nameLast }}</dd>
                                        <dt>Geschlecht</dt>
                                        <dd>{{ participant.getGender(true) }}</dd>
                                        <dt>Geburtsdatum</dt>
                                        <dd>{{ participant.getBirthday|date("d.m.Y") }}</dd>
                                        <dt>Ernährung</dt>
                                        <dd>
                                            {% set participantFood = participant.getFood(true) %}
                                            {% if participantFood|length %}
                                                {{ participant.getFood(true)|join(', ') }}
                                            {% else %}
                                                <i>(keine Besonderheiten)</i>
                                            {% endif %}
                                        </dd>
                                        <dt>Medizinische Hinweise</dt>
                                        <dd>
                                            {% if participant.infoMedical %}
                                                {{ participant.infoMedical }}
                                            {% else %}
                                                <i>(keine Besonderheiten)</i>
                                            {% endif %}
                                        </dd>
                                        <dd>
                                        <dt>Allgemeine Hinweise</dt>
                                        <dd>
                                            {% if participant.infoGeneral %}
                                                {{ participant.infoGeneral }}
                                            {% else %}
                                                <i>(keine Besonderheiten)</i>
                                            {% endif %}
                                        </dd>
                                        <dd>
                                    </dl>
                                </div>
                            </div>
                            <div class="col-xs-12 status-label-list">
                                {{ ' '|bitmask(participant.getStatus(true), statusFormatter) }}
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}

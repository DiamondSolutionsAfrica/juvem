{% extends 'base.html.twig' %}

{% block title %}Veranstaltung{% endblock %}

{% block body %}
    {{ include('modal/formdialog.html.twig', { 'modal': eventDeleteModal}) }}
    {%  include 'base-page-header.html.twig' with {'title': 'Veranstaltung', 'subtitle': 'Detailansicht'} %}
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <div class="btn-toolbar" role="toolbar" aria-label="Veranstaltung bearbeiten">
                    <div class="btn-group" role="group">
                        <button type="button" class="btn btn-default">{{ 'list'|glyph }} <span class="hidden-xs">Anmeldungen</span></button>
                        <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <span class="caret"></span>
                            <span class="sr-only">Menü erweitern</span>
                        </button>
                        <ul class="dropdown-menu">
                            <li><a href="#">Anmeldungen verwalten</a></li>
                            <li role="separator" class="divider"></li>
                            <li><a href="#">Anmeldungen komplett exportieren</a></li>
                            <li><a href="#">E-Mail versenden</a></li>
                        </ul>
                    </div>
                    <div class="btn-group" role="group">
                        <button type="button" class="btn btn-primary">{{ 'pencil'|glyph }} <span class="hidden-xs">Bearbeiten</span></button>
                        {%  include 'common/active-button.html.twig' with {'button': buttonState} %}
                        {%  include 'common/active-button.html.twig' with {'button': buttonVisibility} %}
                    </div>
                    <button type="button" class="btn btn-default" data-toggle="modal" data-target="#{{ eventDeleteModal.id }}" >{{ 'trash'|glyph }} <span class="hidden-xs">Löschen</span></button>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12 col-sm-4 col-md-3">
                <a href="{{ asset('faw.png') }}" class="thumbnail">
                    <img src="{{ asset('faw.png') }}" alt="Veranstaltungs-Bild" title="Veranstaltungs-Bild">
                </a>
            </div>
            <div class="col-xs-12 col-sm-8 col-md-9">
                <h3>{{ event.getTitle }}</h3>
            </div>
            <div class="col-xs-12 col-sm-8 col-md-6">
                    {% if event.isActive() %}
                        <span class="label label-primary">Aktiv</span>
                    {% else %}
                        <span class="label label-default">Inaktiv</span>
                    {% endif %}
                    {% if event.isVisible() %}
                        <span class="label label-primary">Sichtbar</span>
                    {% else %}
                        <span class="label label-default">Versteckt</span>
                    {% endif %}
                </p>
            </div>
            <div class="col-xs-12 col-sm-8 col-md-3">
                {{ event.getStartDate.format(constant('AppBundle\\Entity\\Event::DATE_FORMAT_DAY')) }} -
                {{ event.getEndDate.format(constant('AppBundle\\Entity\\Event::DATE_FORMAT_DAY')) }}
            </div>
            <div class="col-xs-12 col-sm-8 col-md-9">
                <div class="panel panel-default">
                  <div class="panel-body">
                    {{ event.getDescription|e }}
                  </div>
                </div>
            </div>
        </div>
        <div class="row">
        </div>
    </div>
{% endblock %}
